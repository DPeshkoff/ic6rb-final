<% if @error %>
    <div class="alert alert-warning" style="top: 20px;">
        <%= @error %>
    </div>
<% end %>

<div class="container h-100">
<div class="d-flex justify-content-center h-100">
    <div class="user_card">
        <div class="d-flex justify-content-center">
            <div class="brand_logo_container">
            <%= image_tag 'logo.png', id: 'logo', style: 'width: 63px; height: 40px' %>
            </div>
        </div>
        <div class="d-flex justify-content-center form_container">
            <%= form_tag("/auth", :method => "post") do %>
                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" name="username" id="username" class="form-control input_user" required: true autofocus:true value="" placeholder="<%= t :username_key %>">
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" name="password" id="password" class="form-control input_pass" required: true value="" placeholder="<%= t :password_key %>">
                </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                    <%= submit_tag t(:login_key) %>
           </div>
           <% end %>
        </div>

        <div class="mt-4">
            <div class="d-flex justify-content-center links">
             <%= t :no_account_text_key %>  <%= button_to t(:signup_key), '/register', method: 'get' %>
            </div>
        </div>
    </div>
</div>
</div>

<% if @error %>
    <div class="alert alert-warning" style="top: 20px;">
        <%= @error %>
    </div>
<% end %>